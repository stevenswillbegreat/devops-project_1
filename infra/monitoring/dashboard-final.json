{
  "title": "CueGrowth Microservices Dashboard",
  "tags": ["microservices", "queue", "worker"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "API Request Rate (Network Traffic)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"app-workload\",pod=~\"api.*\"}[5m]))",
          "legendFormat": "API Network In",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Queue Backlog (NATS Connections)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(nats_varz_connections) by (server_name)",
          "legendFormat": "{{server_name}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Worker Processing (Network Activity)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"app-workload\",pod=~\"worker.*\"}[5m]))",
          "legendFormat": "Worker Network",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Valkey Operations/sec",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 5,
      "title": "Pod CPU Usage",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"app-workload\",container!=\"\",container!=\"POD\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "id": 6,
      "title": "Pod Memory Usage",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"app-workload\",container!=\"\",container!=\"POD\"}) by (pod)",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    }
  ]
}
